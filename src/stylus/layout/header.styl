header
  width 100%
  height 50px
  display flex
  background-color $c-cerulean-blue
  justify-content center
  align-items center
  h1
    text-transform uppercase
    text-align center
    color $c-white
    font-size 1.5em
    display flex
    align-items center
    font-weight 700
    i
      width 30px
      height 30px
      margin-right 10px
      transform rotate(-10deg)
    svg
      width 100%
      height 30px