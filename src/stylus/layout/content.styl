.main
  width 100%
  max-width 700px
  margin 20px auto
  margin-top 20px
  padding 0 2%
  .quiz
    width 100%
    display inline-block
    .question
      width 100%
      display inline-block
      margin-bottom 10px
      font-weight 400
      color $c-tundora
      font-size 1.1em
    .answers
      width 100%
      margin-bottom 10px
      display flex
      flex-wrap wrap
      label 
        width 100%
        height 40px
        background-color $c-white
        border-radius 5px
        margin-bottom 10px
        display flex
        align-items center
        padding 0 15px
        font-size 1em
        font-weight 400
        cursor pointer
        .checkbox
          width 20px
          height 20px
          border 1px solid $c-nobel
          margin-right 10px
          display flex
          justify-content center
          align-items center
          &:after
            content ""
            width 10px
            height 5px
            position relative
            border-left 3px solid #0dbb05
            border-bottom 3px solid #0dbb05
            display inline-block
            transform rotate(-45deg)
            opacity 0
            transition opacity .25s ease-out
        input 
          display none
          &:checked
            + .checkbox
                &:after
                  opacity 1
                  transition opacity .25s ease-in
  button
    width 100%
    height 40px
    display flex
    margin-top 20px
    justify-content center
    align-items center
    border 0
    background-color $c-oslo-gray
    font-size 1.1em
    color $c-white
    font-weight 400
    cursor pointer